{
    "name": "choijx/nowipay-sdk",
    "description": "现在支付 SDK",
    "keywords": [
        "ipaynow",
        "sdk"
    ] ,
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "caijx",
            "email": "caijx@ggxx.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.6.0",
        "guzzlehttp/guzzle": "^6.5|^7.0",
        "ext-bcmath": "*"
    },
    "autoload": {
        "psr-4": {
            "Choijx\\NowIpaySdk\\": "src/"
        },
        "files": [
            "src/helper.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    }

}
